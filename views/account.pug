extends layout

block content
    div.inner
        h2 Edit Acount
        form(action="/account" method="POST")
            label(for="name") Name
            input(type="text" name="name" value=user.name)
            label(for="email") Email Address
            input(type="text" name="email" value=user.email)
            input.button(type="submit" value="Update Account")
